<div>
  <h2 class="post-title"><%= post.title %></h2>
  <div class="post-text"><%= post.body %></div>

  <div class="text-right">
    <% if logged_in? %>
      <strong>Author: <%= post.user.name %></strong>
    <% end %>

    <p class="post-time">Posted <%= time_ago_in_words(post.created_at) %> ago.</p>
  </div>

</div>
<hr>